# Screenshots
bindsym $win+Print exec scrot '%m.%d.%Y-$wx$h-%T.png' -e 'mv $f `echo ~/Pictures/Screenshots/$f | tr ':' '.'` '
bindsym Shift+Print exec scrot -u '%m.%d.%Y-$wx$h-%T.png' -e 'mv $f `echo ~/Pictures/Screenshots/$f | tr ':' '.'` '
bindsym Print --release exec --no-startup-id "maim ~/Pictures/Screenshots/$(date +%m.%d.%Y--%H.%M.%S).png -s -c 1,0,0,0.6"

