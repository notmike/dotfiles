! .Xmodmap

! Swap LeftAlt & LeftSuper (mod1=alt & mod4=super by default)
clear Mod1
clear Mod4
add Mod1 = Super_L Super_R Super_L Super_R
add Mod4 = Alt_L Alt_R Alt_L Alt_R

! make the menu button an Alt button
keycode 135 = Alt_R NoSymbol NoSymbol NoSymbol

! Swap "Backspace" button & the button right below it, the "\ |" button
keycode 22 = backslash bar NoSymbol NoSymbol
keycode 51 = BackSpace Delete NoSymbol NoSymbol

! Swap Caps_Lock and Control_R
remove Lock = Caps_Lock
remove Control = Control_R
keysym Control_R = Caps_Lock
keysym Caps_Lock = Control_R
add Lock = Caps_Lock
add Control = Control_R
